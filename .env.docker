DJANGO_BPP_SECRET_KEY="ZMIEN_KONIECZNIE_PRZED_URUCHOMIENIEM_PRODUKCJI"

DJANGO_BPP_DB_NAME="bpp"
DJANGO_BPP_DB_USER="postgres"
DJANGO_BPP_DB_HOST="db"
DJANGO_BPP_DB_PORT="5432"

DJANGO_BPP_MEDIA_ROOT="/mediaroot"
