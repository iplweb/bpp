# ============================================================================
# UPSTREAM CONFIGURATION
# ============================================================================
# Defines the backend application server pool for load balancing
upstream appserver_bpp {
    server appserver:8000;
}

# ============================================================================
# HTTP SERVER BLOCKS
# ============================================================================

# Catch-all server block for HTTP traffic with unknown hostnames
# Drops connections with 444 (no response) to prevent access to invalid hostnames
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    server_name _;

    access_log off;
    error_log /dev/null;
    return 444;
}

# HTTP to HTTPS redirect server block (only if SSL is enabled)
# Redirects all legitimate HTTP traffic to HTTPS with proper hostname
server {
    listen 80;
    listen [::]:80;

    server_name ${DJANGO_BPP_HOSTNAME};

    # Only redirect to HTTPS if SSL certificates are available
    if (-f /etc/ssl/private/cert.pem) {
        return 301 https://$host$request_uri;
    }

    # Otherwise serve HTTP directly for development
    client_max_body_size 100M;

    # Include the same location blocks as HTTPS
    location / {
        try_files $uri @proxy_to_app;
    }

    location = /metrics {
        deny all;
        access_log off;
        return 403;
    }

    location @proxy_to_app {
        proxy_pass http://appserver_bpp;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $server_name;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Scheme $scheme;
        proxy_set_header Host $http_host;
        proxy_set_header Referer $http_referer;
        proxy_connect_timeout 60s;
        proxy_send_timeout 300s;
        proxy_read_timeout 300s;
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
        proxy_redirect off;
    }

    # ============================================================================
    # EXTERNAL SERVICE AUTHENTICATION
    # ============================================================================
    # Auth subrequest to BPP - validates superuser session
    location = /_bpp_superuser_auth {
        internal;
        proxy_pass http://appserver_bpp/__external_auth/is_superuser/;
        proxy_pass_request_body off;
        proxy_set_header Content-Length "";
        proxy_set_header X-Original-URI $request_uri;
        # Forward headers required for Django session authentication
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        # Critical: forward session cookie for authentication
        proxy_set_header Cookie $http_cookie;
    }

    # Login redirect handler for unauthorized access
    location @bpp_login {
        return 302 /accounts/login/?next=$scheme://$host$request_uri;
    }

    # ============================================================================
    # GRAFANA PROXY (port 3000)
    # ============================================================================
    # Uses variables for hostname to defer DNS resolution to request time.
    # If grafana service is not running, requests will get 502 instead of
    # nginx failing to start.
    location /grafana/ {
        # Use Docker's internal DNS resolver (127.0.0.11)
        resolver 127.0.0.11 valid=30s;
        set $upstream_grafana grafana;

        # Require superuser authentication from BPP
        auth_request /_bpp_superuser_auth;

        # Get user info from BPP response headers
        auth_request_set $bpp_user  $upstream_http_x_webauth_user;
        auth_request_set $bpp_email $upstream_http_x_webauth_email;
        auth_request_set $bpp_name  $upstream_http_x_webauth_name;

        # Override client headers with authenticated values
        proxy_set_header X-WEBAUTH-USER  $bpp_user;
        proxy_set_header X-WEBAUTH-EMAIL $bpp_email;
        proxy_set_header X-WEBAUTH-NAME  $bpp_name;

        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # Rewrite /grafana/ to / for Grafana
        rewrite ^/grafana/(.*)$ /$1 break;
        proxy_pass http://$upstream_grafana:3000;

        # Redirect to BPP login on auth failure
        error_page 401 = @bpp_login;
    }

    # ============================================================================
    # DOZZLE PROXY (port 8080)
    # ============================================================================
    # Uses variables for hostname to defer DNS resolution to request time.
    # If dozzle service is not running, requests will get 502 instead of
    # nginx failing to start.
    location /dozzle/ {
        # Use Docker's internal DNS resolver (127.0.0.11)
        resolver 127.0.0.11 valid=30s;
        set $upstream_dozzle dozzle;

        # Require superuser authentication from BPP
        auth_request /_bpp_superuser_auth;

        # Get user info from BPP response headers
        auth_request_set $bpp_user  $upstream_http_x_webauth_user;
        auth_request_set $bpp_email $upstream_http_x_webauth_email;
        auth_request_set $bpp_name  $upstream_http_x_webauth_name;

        # Override client headers with authenticated values
        proxy_set_header X-WEBAUTH-USER  $bpp_user;
        proxy_set_header X-WEBAUTH-EMAIL $bpp_email;
        proxy_set_header X-WEBAUTH-NAME  $bpp_name;

        proxy_set_header Host $host;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # Dozzle-specific settings for real-time log streaming
        chunked_transfer_encoding off;
        proxy_buffering off;
        proxy_cache off;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # Rewrite /dozzle/ to / for Dozzle
        rewrite ^/dozzle/(.*)$ /$1 break;
        proxy_pass http://$upstream_dozzle:8080;

        # Redirect to BPP login on auth failure
        error_page 401 = @bpp_login;
    }

    # ============================================================================
    # BESZEL PROXY (port 8090)
    # ============================================================================
    # Uses variables for hostname to defer DNS resolution to request time.
    # If beszel service is not running, requests will get 502 instead of
    # nginx failing to start.
    location /beszel/ {
        # Use Docker's internal DNS resolver (127.0.0.11)
        resolver 127.0.0.11 valid=30s;
        set $upstream_beszel beszel;

        # Require superuser authentication from BPP
        auth_request /_bpp_superuser_auth;

        # Get user info from BPP response headers
        auth_request_set $bpp_user  $upstream_http_x_webauth_user;
        auth_request_set $bpp_email $upstream_http_x_webauth_email;
        auth_request_set $bpp_name  $upstream_http_x_webauth_name;

        # Override client headers with authenticated values
        proxy_set_header X-WEBAUTH-USER  $bpp_user;
        proxy_set_header X-WEBAUTH-EMAIL $bpp_email;
        proxy_set_header X-WEBAUTH-NAME  $bpp_name;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        # Beszel requires WebSocket support for agent connections
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_read_timeout 360s;
        client_max_body_size 10M;

        # Rewrite /beszel/ to / for Beszel
        rewrite ^/beszel/(.*)$ /$1 break;
        proxy_pass http://$upstream_beszel:8090;

        # Redirect to BPP login on auth failure
        error_page 401 = @bpp_login;
    }

    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~* \.(bak|config|sql|fla|psd|ini|log|sh|inc|swp|dist|git|gitignore|dockerignore|env)$ {
        deny all;
        access_log off;
        log_not_found off;
    }

    location ~* \{\{\s*[cC][lL][iI][cC][kK][uU][rR][lL]\s*\}\} {
        access_log off;
        error_log /dev/null;
        return 444;
    }

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    location /static/ {
        alias /var/www/html/staticroot/;
        expires 30d;
        add_header Cache-Control "public, immutable";
        add_header X-Content-Type-Options "nosniff" always;

        location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
            expires 1y;
            add_header Cache-Control "public, immutable";
        }

        sendfile on;
        sendfile_max_chunk 1m;
        tcp_nopush on;
        tcp_nodelay on;
        keepalive_timeout 65;
    }

    location /media/ {
        alias /mediaroot/;
        expires 7d;
        add_header Cache-Control "public";
        add_header X-Content-Type-Options "nosniff" always;

        location ~* \.(php|php3|php4|php5|php7|phtml|pl|py|pyc|pyo|sh|cgi|rb|asp|aspx|exe|com|bat|dll|vbs|js|jar|jsp|jspx)$ {
            deny all;
        }
    }

    gzip on;
    gzip_static on;
    gzip_min_length 1000;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types text/plain text/css application/json application/x-javascript application/javascript text/xml application/xml application/xml+rss text/javascript;
}

# ============================================================================
# HTTPS SERVER BLOCKS (only if SSL certificates are available)
# ============================================================================

# Catch-all server block for HTTPS traffic with unknown hostnames
# Only enabled if SSL certificates are available
server {
    listen 443 ssl default_server;
    server_name _;

    # Only enable SSL if certificates are available
    if (-f /etc/ssl/private/cert.pem) {
        ssl_reject_handshake on;
        access_log off;
        error_log /dev/null;
    }
}

# Main HTTPS server block for the BPP application
# Only enabled if SSL certificates are available
