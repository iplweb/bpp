# Example environment file for SSL setup with Let's Encrypt
# Copy this file to .env.docker and configure with your values

# Domain name for SSL certificate (must point to this server)
SITE_NAME=bpp.example.com

# Email address for Let's Encrypt notifications
ADMIN_EMAIL=admin@example.com

# Django settings module
DJANGO_SETTINGS_MODULE=django_bpp.settings.production

# Database configuration
DATABASE_URL=postgresql://postgres:postgres@db:5432/bpp

# Redis configuration
REDIS_URL=redis://redis:6379/0
BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Django secret key (generate a new one for production)
SECRET_KEY=your-secret-key-here-change-in-production

# Allowed hosts
ALLOWED_HOSTS=bpp.example.com,localhost

# Debug mode (set to False for production)
DEBUG=False

# Static and media files
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=/staticroot
MEDIA_ROOT=/mediaroot

# Email configuration (optional, for notifications)
EMAIL_URL=smtp://user:password@smtp.example.com:587/?tls=True
DEFAULT_FROM_EMAIL=noreply@example.com
SERVER_EMAIL=server@example.com

# PBN Configuration (if using PBN integration)
PBN_TOKEN_HOURS_GRACE_TIME=24

# Sentry configuration (optional, for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Microsoft Auth configuration (optional)
# MICROSOFT_AUTH_CLIENT_ID=your-client-id
# MICROSOFT_AUTH_CLIENT_SECRET=your-client-secret

# LDAP configuration (optional)
# AUTH_LDAP_SERVER_URI=ldap://ldap.example.com

# Additional Django settings
USE_TZ=True
LANGUAGE_CODE=pl
TIME_ZONE=Europe/Warsaw
